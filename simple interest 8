#include<iostream> 
using namespace std; 
int main() 
{ 
 int p,y,c,i,a; 
 cout<<"Enter the Amount : "; 
 cin>>p; 
 cout<<"\nEnter number of years : "; 
 cin>>y; 
 cout<<"\n1-Senior Citizen\n2-not Senior Citizen"; 
 cout<<"\nEnter the choice 1 or 2 : "; 
 cin>>c; 
 switch(c) 
 { 
  case 1: 
   a=p*y*12/100; 
   cout<<"\nThe Simple Interest for Senior Citizen is : "<<a; 
   break;
  case 2: 
   i=p*y*10/100; 
   cout<<"\nThe Simple Interest for Normal Citizen is : "<<i; 
 }
} 
